{
  "manifest_version": 3,
  "name": "Gallierify",
  "version": "1.0",
  "description": "Open a new tab with a different address based on a hotkey.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://www.reddit.com/*"],
  "action": {
    "default_popup": "",
    "default_title": "Gallierify"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_new_tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open a new tab with a different address based on a hotkey."
    }
  },
  "icons": {
    "48": "icon48.png"
  }
}
